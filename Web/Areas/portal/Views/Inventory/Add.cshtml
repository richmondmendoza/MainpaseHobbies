
@model Web.Models.InventoryViewModel

@{
    ViewBag.title = "Update Inventory Item";
}
<link href="~/Content/assets/plugins/select2/css/select2.min.css" rel="stylesheet" />
<link href="~/Content/assets/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css" rel="stylesheet" />
<link href="~/Content/assets/plugins/monUpload/monUpload.css" rel="stylesheet" />

<style>
    #row-with-image {
        display: flex;
        flex-direction: row; /* horizontal layout on desktop */
    }

    /* By default, elements follow the HTML order */
    #element1 {
        order: 1; /* default, first */
    }

    #element2 {
        order: 2; /* default, second */
    }

    /* On mobile view */
    @@media (max-width: 768px) {
        #row-with-image {
            flex-direction: column; /* vertical layout */
        }

        #element1 {
            order: 2; /* make element1 second */
        }

        #element2 {
            order: 1; /* make element2 first */
        }
    }
</style>

<div class="row">
    <div class="col-md-12">

        @Using (Html.BeginForm("Add", "Inventory", FormMethod.Post, New { area = "portal", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(a => a.Id)
            @Html.HiddenFor(a => a.IsDeleted)
            @Html.HiddenFor(a => a.DateCreated)

            <div class="card">
                <div class="card-header pt-4 pb-4">
                    <h3 class="card-title">New Item</h3>
                    @*<div class="card-tools">
                            <a href="@Url.Action("GoBack", "Base", new {area = "", ReturnUrl = Url.Action("List", "Inventory", new {area = "portal"}) })" class="mr-2"><i class="fa fa-times"></i></a>
                        </div>*@
                </div>

                <div class="card-body mb-0 row" id="row-with-image">

                    <div class="col-lg-6 col-md-6" id="element1">
                        <div class="form-group row">
                            <label class="col-lg-3 col-md-5 col-sm-12 col-form-label">Name <span class="text-red">*</span></label>
                            <div class="col-lg-9 col-md-7 col-sm-12">
                                @Html.TextBoxFor(a => a.Name, new { @class = "form-control", autocomplete = "off" })
                                @Html.ValidationMessageFor(a => a.Name)
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-3 col-md-5 col-sm-12 col-form-label">Set Code</label>
                            <div class="col-lg-9 col-md-7 col-sm-12">
                                @Html.TextBoxFor(a => a.SetCode, new { @class = "form-control", autocomplete = "off" })
                                @Html.ValidationMessageFor(a => a.SetCode)
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-3 col-md-5 col-sm-12 col-form-label">Set Name</label>
                            <div class="col-lg-9 col-md-7 col-sm-12">
                                @Html.TextBoxFor(a => a.SetName, new { @class = "form-control", autocomplete = "off" })
                                @Html.ValidationMessageFor(a => a.SetName)
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-3 col-md-5 col-sm-12 col-form-label">Scryfall ID</label>
                            <div class="col-lg-9 col-md-7 col-sm-12">
                                @Html.TextBoxFor(a => a.ScryfallId, new { @class = "form-control", autocomplete = "off" })
                                @Html.ValidationMessageFor(a => a.ScryfallId)
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-3 col-md-5 col-sm-12 col-form-label">Manabox ID</label>
                            <div class="col-lg-9 col-md-7 col-sm-12">
                                @Html.TextBoxFor(a => a.ManaboxId, new { @class = "form-control", autocomplete = "off" })
                                @Html.ValidationMessageFor(a => a.ManaboxId)
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-3 col-md-5 col-sm-12 col-form-label">Type</label>
                            <div class="col-lg-9 col-md-7 col-sm-12">
                                @Html.DropDownListFor(a => a.FoilType, Model.FoilTypeList, new { @class = "form-control select2" })
                                @Html.ValidationMessageFor(a => a.FoilType)
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-3 col-md-5 col-sm-12 col-form-label">Rarity</label>
                            <div class="col-lg-9 col-md-7 col-sm-12">
                                @Html.DropDownListFor(a => a.Rarity, Model.RarityList, new { @class = "form-control select2" })
                                @Html.ValidationMessageFor(a => a.Rarity)
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-3 col-md-5 col-sm-12 col-form-label">Color</label>
                            <div class="col-lg-9 col-md-7 col-sm-12">
                                @Html.DropDownListFor(a => a.Color, Model.ColorList, new { @class = "form-control select2" })
                                @Html.ValidationMessageFor(a => a.Color)
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-3 col-md-5 col-sm-12 col-form-label">Condition</label>
                            <div class="col-lg-9 col-md-7 col-sm-12">
                                @Html.DropDownListFor(a => a.Condition, Model.ConditionList, new { @class = "form-control select2" })
                                @Html.ValidationMessageFor(a => a.Condition)
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-3 col-md-5 col-sm-12 col-form-label">Mana Cost</label>
                            <div class="col-lg-9 col-md-7 col-sm-12">
                                @Html.TextBoxFor(a => a.ManaCost, new { @class = "form-control", autocomplete = "off" })
                                @Html.ValidationMessageFor(a => a.ManaCost)
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-3 col-md-5 col-sm-12 col-form-label">Card Type</label>
                            <div class="col-lg-9 col-md-7 col-sm-12">
                                @Html.TextBoxFor(a => a.CardType, new { @class = "form-control", autocomplete = "off" })
                                @Html.ValidationMessageFor(a => a.CardType)
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-3 col-md-5 col-sm-12 col-form-label">&nbsp;</label>
                            <div class="col-lg-9 col-md-7 col-sm-12 row">
                                <div class="col-6">
                                    <label>@Html.CheckBoxFor(a => a.Misprint) Misprint</label>
                                </div>
                                <div class="col-6">
                                    <label>@Html.CheckBoxFor(a => a.Tampered) Tampered</label>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="col-lg-6 col-md-6" id="element2">
                        <div class="mb-2">
                            <label for="imageUpload">Upload image</label><br>
                            <input type="file" id="imageUpload" name="ImageFile" accept="image/*" onchange="previewImage(event)" />
                        </div>
                        <div>
                            <div class="tcg-image-container">
                                <img id="tcg-image-preview" class="tcg-image" src="image.png" alt="Image preview" />
                                <div class="tcg-foil"></div>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="card-body bg-light">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-8">
                            <div class="form-group row">
                                <label class="col-lg-3 col-md-5 col-sm-12 col-form-label">Price <span class="text-red">*</span></label>
                                <div class="col-lg-9 col-md-7 col-sm-12">
                                    @Html.TextBoxFor(a => a.Price, new { @class = "form-control", type = "number", autocomplete = "off" })
                                    @Html.ValidationMessageFor(a => a.Price)
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-lg-3 col-md-5 col-sm-12 col-form-label">Price Currency</label>
                                <div class="col-lg-9 col-md-7 col-sm-12">
                                    @Html.TextBoxFor(a => a.PurchaseCurrency, new { @class = "form-control", autocomplete = "off" })
                                    @Html.ValidationMessageFor(a => a.PurchaseCurrency)
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-lg-3 col-md-5 col-sm-12 col-form-label">Description</label>
                                <div class="col-lg-9 col-md-7 col-sm-12">
                                    @Html.TextAreaFor(a => a.Description, new { @class = "form-control", style = "min-height: 150px; min-width: 100%; max-width: 100%;" })
                                    @Html.ValidationMessageFor(a => a.Description)
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-8">
                            <div class="form-group row">
                                <label class="col-lg-3 col-md-5 col-sm-12 col-form-label">Illustrated By</label>
                                <div class="col-lg-9 col-md-7 col-sm-12">
                                    @Html.TextBoxFor(a => a.IllustratedBy, new { @class = "form-control", autocomplete = "off" })
                                    @Html.ValidationMessageFor(a => a.IllustratedBy)
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

                <div class="card-footer text-right">
                    <a href="@Url.Action("GoBack", "Base", new {area = "", ReturnUrl = Url.Action("List", "Item", new {area = "portal"})})" class="btn btn-default mr-2">Cancel</a>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>

            </div>
        }
    </div>
</div>


@section scripts{
    <script src="~/Content/assets/plugins/select2/js/select2.min.js"></script>
    <script src="~/Content/assets/plugins/monUpload/monUpload.js"></script>

    <script>

        function previewImage(event) {
            const input = event.target;
            const preview = document.getElementById("tcg-image-preview");

            if (input.files && input.files[0]) {
                const reader = new FileReader();

                reader.onload = function (e) {
                    preview.src = e.target.result;
                    preview.style.display = "block";
                };

                reader.readAsDataURL(input.files[0]);
            } else {
                preview.src = "";
            }
        }

        function toggleFoil(value) {
            if (value.toLowerCase().replace(/\s/g, '') === 'foil' ||
                value.toLowerCase().replace(/\s/g, '') === 'etchedfoil') {
                $('.tcg-foil').show();
            } else {
                $('.tcg-foil').hide();
            }
        }

        $(document).ready(function () {
            toggleFoil('@Model.FoilType');

            $('.select2').select2({ "theme": "bootstrap4" });

            $('#FoilType').on('change', function () {
                toggleFoil($(this).val());
            });

        })
    </script>
}